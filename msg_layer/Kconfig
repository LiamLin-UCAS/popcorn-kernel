if POPCORN

config POPCORN_KMSG
	bool "Popcorn inter-kernel messaging support"
	depends on POPCORN
	default y
	help
		Support various inter-kernel message passing implementations

config POPCORN_KMSG_SOCKET
	tristate "Socket messaging layer"
	depends on POPCORN_KMSG && INET
	default m

config POPCORN_KMSG_DOLPHIN
	tristate "Dolphin messaging layer"
	depends on POPCORN_KMSG
	default n

config POPCORN_KMSG_IB
	tristate "InfiniBand messaging layer"
	depends on POPCORN_KMSG && INFINIBAND
	default n

config POPCORN_KMSG_IB_RDMA
	bool "Use RDMA to transfer pages"
	depends on POPCORN_KMSG_IB
	default n
	help
		Transfer pages through RDMA. N will transfer pages using IB verb.

config POPCORN_KMSG_TEST
	tristate "Test modules for messaging layer"
	depends on POPCORN_KMSG
	default n

config POPCORN_DEBUG_MSG_LAYER_VERBOSE
	bool "Print debug message for the message layer"
	depends on POPCORN_KMSG && POPCORN_DEBUG
	default n

if POPCORN_DEBUG_MSG_LAYER_VERBOSE
config POPCORN_DEBUG_MSG_LAYER_VERBOSE_DEBUG
	bool "Print more debug message"
	default n

config POPCORN_DEBUG_MSG_LAYER_DATA
	bool "Print experimental data"
	default n
endif

endif
